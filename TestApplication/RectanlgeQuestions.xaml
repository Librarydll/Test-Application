<UserControl x:Class="TestApplication.RectanlgeQuestions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApplication"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="170">
    <Border BorderBrush="#FF3FC2FF" BorderThickness="1" Background="White" Margin="10" CornerRadius="8" Padding="2">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Path=TextPlace,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Padding="5"
                      HorizontalAlignment="Left" VerticalAlignment="Top"
                       FontSize="12" FontWeight="DemiBold"
                       TextWrapping="Wrap"
                        TextAlignment="Center"
                       Width="159" Height="35" FontFamily="Arial Black">
            </TextBlock>
        </StackPanel>
    </Border>
</UserControl>
