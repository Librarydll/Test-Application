<Window x:Class="TestApplication.Views.CreateTestWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApplication.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Title="Create Test" Height="200" Width="520">
    <StackPanel Orientation="Horizontal" Margin="5">
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="DemiBold">Write your test name</TextBlock>
        <TextBox Style="{StaticResource AnswerTextBoxStyle}" Width="250" Height="50" FontSize="15" FontWeight="DemiBold" Margin="5"></TextBox>
        <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderBrush="LightBlue" BorderThickness="3" >
        <Button x:Name="CreateTestClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="35" Width="75" Margin="5" Content="Create" Style="{StaticResource AddImageButton}"></Button>
        </Border>
    </StackPanel>
</Window>
